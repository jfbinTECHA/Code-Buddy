{
  "id": null,
  "title": "Bytebot Manual Control Panel",
  "uid": "bytebot-control",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "button",
      "title": "Restart Bytebot Agent",
      "description": "Trigger /api/ops/recover to restart the Bytebot Agent container",
      "targets": [],
      "options": {
        "text": "Restart Agent",
        "tooltip": "POST to /api/ops/recover",
        "icon": "refresh",
        "variant": "primary",
        "mode": "http",
        "httpMethod": "POST",
        "url": "http://localhost:9991/api/ops/recover",
        "headers": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": "{\"action\":\"restart-agent\"}",
        "showResponse": true,
        "timeout": 5000
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "id": 1001
    },
    {
      "type": "button",
      "title": "Restart UI Dashboard",
      "description": "Trigger /api/ops/recover to restart the Bytebot UI container",
      "targets": [],
      "options": {
        "text": "Restart UI",
        "tooltip": "POST to /api/ops/recover",
        "icon": "desktop",
        "variant": "secondary",
        "mode": "http",
        "httpMethod": "POST",
        "url": "http://localhost:9991/api/ops/recover",
        "headers": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": "{\"action\":\"restart-ui\"}",
        "showResponse": true,
        "timeout": 5000
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "id": 1002
    },
    {
      "type": "button",
      "title": "Check Bytebot Health",
      "description": "Runs GET /api/ops/health for quick verification",
      "targets": [],
      "options": {
        "text": "Check Health",
        "tooltip": "GET /api/ops/health",
        "icon": "heart",
        "variant": "success",
        "mode": "http",
        "httpMethod": "GET",
        "url": "http://localhost:9991/api/ops/health",
        "showResponse": true,
        "timeout": 3000
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "id": 1003
    },
    {
      "type": "stat",
      "title": "Agent Health Status",
      "id": 1004,
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "bytebot_agent_status",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "showPercentChange": false
      },
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "red", "value": null },
          { "color": "green", "value": 1 }
        ]
      }
    },
    {
      "type": "gauge",
      "title": "Memory Usage (MB)",
      "id": 1005,
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 4 },
      "targets": [
        {
          "expr": "bytebot_memory_usage_mb",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "min": 0,
          "max": 2048,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1400 },
              { "color": "red", "value": 1800 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Latency (ms)",
      "id": 1006,
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "bytebot_request_latency_ms",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "palette-classic" }
        }
      }
    }
  ],
  "time": { "from": "now-30m", "to": "now" }
}